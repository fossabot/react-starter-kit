{
  // More options: https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "es5", "es6", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
